<%- include('../partials/head')%>
<%- include('../partials/navbar')%>

      <h1>Add Doctor</h1>
    
      <form action='/doctors' method="POST"  class="validated-form">
        <label for="name">Doctor Name:</label>
        <input type="text" id="name" name="doctor[name]" required>
    
        <label for="degree">Degree:</label>
        <input type="text" id="degree" name="doctor[degree]" required>
    
        <label for="department">Department:</label>
        <select id="department" name="doctor[department]" required>
          <option value="">Select Department</option>
          <option value="Cardiology">Cardiology</option>
          <option value="Dermatology">Dermatology</option>
          <option value="Gastroenterology">Gastroenterology</option>
          <option value="Neurology">Neurology</option>
          <option value="Oncology">Oncology</option>
          <option value="Orthopedics">Orthopedics</option>
          <option value="Pediatrics">Pediatrics</option>
          <option value="Psychiatry">Psychiatry</option>
          <option value="Urology">Urology</option>
        </select>
    
        <label for="image">Doctor Image URL:</label>
        <input type="url" id="image" name="doctor[image]" required>
    
        <button type="submit">Add Doctor</button>
      </form>
<%- include('../partials/footer')%>
