<%- include('../partials/head')%>
<%- include('../partials/navbar')%>


<% if (new_doctors.length > 0) { %>
<div class="container">
  <br>
  <h1 style="text-align : center;"> Showing doctors of <%=new_doctors[0].department%> Department :</h1>
  <br>
  <br>
  <div class="row">
    <% for( let doctor of new_doctors) { %>

    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 col-xxl-3">
      <div class="card text-center mb-3 bg-transparent border-success" style=" box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;" data-aos="zoom-in">
        <img src="<%= doctor.image %>" style="background-size: cover;
	background-repeat: no-repeat;
	background-position: center center;
	width: 100%;
	height: 300px;" alt="loading...">
        <div class="card-body">
          <h5 class="card-title font-weight-bold "><%= doctor.name %></h5>
          <p class="card-text text-muted"><%= doctor.degree %>, <%= doctor.department %></p>
          <a href="/doctors/<%= doctor._id %>" class="btn btn-success">Get Appointment</a>
        </div>
      </div>
    </div>
    <%}%> 
</div>
</div>
    
<%}else {%>
    <br>
    <h1 style="text-align : center ;">No Doctors Available for this Department !</h1>
    <%}%>

<%- include('../partials/footer')%>