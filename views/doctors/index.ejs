<%- include('../partials/head')%>
<%- include('../partials/navbar')%>


<div class="container text-center" >
    <h1>Our Doctors</h1>
    <hr>
    
    <!-- Add a new doctor link -->
    <form action="/doctors/filtered" method="post" >
    <label for="doc-select">Filter speciality and Search :</label>

    <select name="docs" id="doc-select">
    <option value="all">--Please choose an option--</option>
    <option value="cardiology">Cardiology</option>
    <option value="dermatology">Dermatology</option>
    <option value="orthopedics">Orthopedics</option>
    <option value="oncology">Oncology</option>
    <option value="neurology">Neurology</option>
    <option value="gastroenterology">Gastroenterology</option>
    <option value="psychiatry">Psychiatry</option>
    <option value="urology">Urology</option>
    <option value="pediatrics">Pediatrics</option>
    </select>
    <button>Submit</button>
    </form>
    
    <br>
    <br>

    <a href="/doctors/new" class="btn btn-success my-3">+ Add a new doctor</a>
    <% for( let doctor of doctors) { %>
    <div class="card text-center mb-3" style="max-width:400px; margin:auto;box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;" data-aos="zoom-in">
        <img src="<%= doctor.image %>" class="card-img-top" alt="loading...">
        <div class="card-body">
            <h5 class="card-title font-weight-bold "><%= doctor.name %></h5>
            <p class="card-text text-muted"><%= doctor.degree %>, <%= doctor.department %></p>
            <a href="/doctors/<%= doctor._id %>" class="btn btn-success">Get Appointment</a>
        </div>
    </div>
     <%}%> 
    

</div>
<%- include('../partials/footer')%>